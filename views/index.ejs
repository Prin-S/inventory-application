<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('navbar', { links }) %>
    <h1><%= title %></h1>
    <div class="container">
      <% if (title == 'All Games') { %>
        <% games.forEach(game => { %>
          <div class="box">
            <h3><%= game.title %></h3>
            <p><%= game.genre %></p>
            <p><%= game.developer %></p>
          </div>
        <% }); %>
      <% } else if (title == 'All Genres') { %>
        <% genres.forEach(genre => { %>
          <div class="box">
            <p><%= genre.genre %></p>
          </div>
        <% }); %>
      <% } else if (title == 'All Developers') { %>
        <% developers.forEach(developer => { %>
          <div class="box">
            <p><%= developer.developer %></p>
          </div>
        <% }); %>
      <% } %>
    </div>
    <%- include('footer') %>
  </body>
</html>