<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles.css" />
    <title><%= title %></title>
  </head>
  <body>
    <%- include('navbar', { links }) %>
    <h1><%= title %></h1>
    <div class="container-nav">
      <% if (type == 'game') { %>
        <a href="/add">
      <% } else { %>
        <a href="/add/<%= type %>">
      <% } %>
          <button class="button">Add <%= type %></button>
        </a>
    </div>
    <% if (empty) { %>
      <div class="container container-full">
        <h3>No games found for this <%= type %></h3>
        <a href="/">
          <button class="button">Home</button>
        </a>
      </div>
    <% } else { %>
      <div class="container">
        <% if (title == 'All Games') { %>
          <% games.forEach(game => { %>
            <div class="box">
              <h3><%= game.title %></h3>
              <p><a href="/genre/<%= game.genre_id %>"><%= game.genre %></a></p>
              <p><a href="/developer/<%= game.developer_id %>"><%= game.developer %></a></p>
              <div class="container-nav">
                <a href="/update/<%= game.id %>">
                  <button class="button">Update</button>
                </a>
                <form method="POST" action="/delete/<%= game.id %>?_method=DELETE">
                  <p>
                    <button class="button" type="submit">X</button>
                  </p>
                </form>
              </div>
            </div>
          <% }); %>
        <% } else if (title == 'All Genres') { %>
          <% genres.forEach(genre => { %>
            <div class="box">
              <p><a href="/genre/<%= genre.genre_id %>"><%= genre.genre %></a></p>
              <div class="container-nav">
                <a href="/update/genre/<%= genre.genre_id %>">
                  <button class="button">Update</button>
                </a>
                <form method="POST" action="/delete/genre/<%= genre.genre_id %>?_method=DELETE">
                  <p>
                    <button class="button" type="submit">X</button>
                  </p>
                </form>
              </div>
            </div>
          <% }); %>
        <% } else if (title == 'All Developers') { %>
          <% developers.forEach(developer => { %>
            <div class="box">
              <p><a href="/developer/<%= developer.developer_id %>"><%= developer.developer %></a></p>
              <div class="container-nav">
                <a href="/update/developer/<%= developer.developer_id %>">
                  <button class="button">Update</button>
                </a>
                <form method="POST" action="/delete/developer/<%= developer.developer_id %>?_method=DELETE">
                  <p>
                    <button class="button" type="submit">X</button>
                  </p>
                </form>
              </div>
            </div>
          <% }); %>
        <% } else if (type == 'genre') { %>
          <% genreEntries.forEach(entry => { %>
            <div class="box">
              <h3><%= entry.title %></h3>
              <p><a href="/developer/<%= entry.developer_id %>"><%= entry.developer %></a></p>
            </div>
          <% }); %>
        <% } else if (type == 'developer') { %>
          <% developerEntries.forEach(entry => { %>
            <div class="box">
              <h3><%= entry.title %></h3>
              <p><a href="/genre/<%= entry.genre_id %>"><%= entry.genre %></a></p>
            </div>
          <% }); %>
        <% } %>
      <% } %>
    </div>
    <%- include('footer') %>
  </body>
</html>